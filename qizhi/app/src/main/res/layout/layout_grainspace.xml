<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.qz.qizhi.widget.GrainSpaceView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvOpenInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:padding="5dp"
                android:text="了解更多" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/grainSpaceDis"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <Button
                    android:id="@+id/btWDsetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0077cc"
                    android:padding="5dp"
                    android:text="提醒设置"
                    android:textColor="@color/white" />


                <RelativeLayout
                    android:id="@+id/layoutTemp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btWDsetting"
                    android:layout_margin="10dp"
                    android:background="@drawable/icon_layout_bg"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvWDTZ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="①\n舱" />

                    <TextView
                        android:id="@+id/tvYM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tvWDTZ"
                        android:padding="@dimen/dimen_15"
                        android:text="余米" />

                    <LinearLayout
                        android:id="@+id/layoutSX"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tvYM"
                        android:background="@drawable/icon_layout_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">


                        <TextView
                            android:id="@+id/etYM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:padding="5dp" />

                        <ImageButton
                            android:id="@+id/ivYM"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/icon_layout_bg"
                            android:padding="12dp"
                            android:src="@mipmap/icon_down" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvSC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvYM"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/tvWDTZ"
                        android:padding="@dimen/dimen_15"
                        android:text="时长" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layoutSX"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/tvSC"
                        android:background="@drawable/icon_layout_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <Button
                            android:id="@+id/btSubSC"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@mipmap/icon_sub" />

                        <TextView
                            android:id="@+id/etSC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:padding="5dp" />

                        <Button
                            android:id="@+id/btAddSC"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@mipmap/icon_temp_add" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutTemp"
                    android:layout_margin="10dp"
                    android:background="@drawable/icon_layout_bg"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tvWDJS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="②\n舱" />

                    <TextView
                        android:id="@+id/tvYM2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tvWDJS"
                        android:padding="@dimen/dimen_15"
                        android:text="余米" />

                    <LinearLayout
                        android:id="@+id/layoutJS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tvYM2"
                        android:background="@drawable/icon_layout_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">


                        <TextView
                            android:id="@+id/etYM2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:padding="5dp" />

                        <ImageButton
                            android:id="@+id/ivYM2"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/icon_layout_bg"
                            android:padding="12dp"
                            android:src="@mipmap/icon_down" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvSC2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvYM2"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/tvWDJS"
                        android:padding="@dimen/dimen_15"
                        android:text="时长" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layoutJS"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/tvSC2"
                        android:background="@drawable/icon_layout_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <Button
                            android:id="@+id/btSubSC2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@mipmap/icon_sub" />

                        <TextView
                            android:id="@+id/etSC2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:padding="5dp" />

                        <Button
                            android:id="@+id/btAddSC2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@mipmap/icon_temp_add" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>