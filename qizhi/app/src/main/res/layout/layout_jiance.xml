<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0077cc"
                    android:padding="5dp"
                    android:text="检测数据"
                    android:textColor="@color/white" />

                <RadioGroup
                    android:id="@+id/rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/btRecord"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/radiobutton_"
                        android:text="瓦斯" />


                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        style="@style/radiobutton_"
                        android:text="烟雾" />

                </RadioGroup>

                <LinearLayout
                    android:id="@+id/layoutCB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/rg"
                    android:layout_below="@+id/rg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <CheckBox
                        android:id="@+id/cbNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/checkbox_"
                        android:checked="true"
                        android:text="监测点" />

                    <CheckBox
                        android:id="@+id/cbChart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        style="@style/checkbox_"
                        android:text="曲线" />
                </LinearLayout>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barchat"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/layoutCB" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/linechat"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/layoutCB"
                    android:layout_marginTop="10dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btWDsetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0077cc"
                    android:padding="5dp"
                    android:text="提醒设置"
                    android:textColor="@color/white" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:text="了解更多"
                    android:textColor="#00b0f0" />

                <RelativeLayout
                    android:id="@+id/layoutTemp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btWDsetting"
                    android:layout_margin="10dp"
                    android:background="@drawable/icon_layout_bg"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/tvYW"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tvWDTZ"
                        android:padding="@dimen/dimen_15"
                        android:text="烟雾浓度" />

                    <LinearLayout
                        android:id="@+id/layoutSX"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tvYW"
                        android:background="@drawable/icon_layout_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <Button
                            android:id="@+id/btSubYW"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@mipmap/icon_sub" />

                        <EditText
                            android:id="@+id/etYW"
                            style="@style/editInputNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/btYW"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@mipmap/icon_temp_add" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tvXX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvYW"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/tvWDTZ"
                        android:padding="@dimen/dimen_15"
                        android:text="瓦斯浓度" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layoutSX"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/tvXX"
                        android:background="@drawable/icon_layout_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <Button
                            android:id="@+id/btSubWS"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@mipmap/icon_sub" />

                        <EditText
                            android:id="@+id/etWS"
                            style="@style/editInputNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                         />

                        <Button
                            android:id="@+id/btADDWS"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@mipmap/icon_temp_add" />
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>