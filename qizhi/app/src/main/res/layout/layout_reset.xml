<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0077cc"
                    android:padding="5dp"
                    android:text="封闭记录"
                    android:textColor="@color/white" />


                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barchat"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/btRecord" />
            </RelativeLayout>

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btWDsetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0077cc"
                android:padding="5dp"
                android:text="提醒设置"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/btWDsetting"
                android:padding="5dp"
                android:text="*默认" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:text="了解更多" />

            <RelativeLayout
                android:id="@+id/layoutTemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btWDsetting"
                android:layout_margin="10dp"
                android:background="@drawable/icon_layout_bg"
                android:padding="10dp">


                <TextView
                    android:id="@+id/tvSX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvWDTZ"
                    android:padding="@dimen/dimen_15"
                    android:text="开盖时长" />
                <LinearLayout
                    android:id="@+id/layoutSX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvSX"
                    android:background="@drawable/icon_layout_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/btSubKG"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@mipmap/icon_sub" />

                    <EditText
                        android:id="@+id/etKG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="单位：分钟"
                        android:inputType="number"
                            android:text="2分钟"
                        android:background="@null"
                        android:padding="5dp" />

                    <Button
                        android:id="@+id/btAddKG"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@mipmap/icon_temp_add" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tvXX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSX"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tvWDTZ"
                    android:padding="@dimen/dimen_15"
                    android:text="出抽时长" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tvXX"
                    android:layout_below="@+id/layoutSX"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/icon_layout_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/btSubCC"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@mipmap/icon_sub" />

                    <EditText
                        android:id="@+id/etCC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="单位：分钟"
                        android:inputType="number"
                        android:text="2分钟"
                        android:background="@null"
                        android:padding="5dp" />

                    <Button
                        android:id="@+id/btAddCC"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@mipmap/icon_temp_add" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>